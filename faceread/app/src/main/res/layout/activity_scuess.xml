<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000c23">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="438dp"
        android:layout_height="51dp"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="51dp"
        android:background="@mipmap/logo_ogmall"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="60dp"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="#BDECFD"
            android:paddingTop="-10dp"
            android:gravity="left|top"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="10:30"/>
        <TextView
            android:id="@+id/tv_xingqi"
            android:layout_below="@id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDECFD"
            android:textSize="16sp"
            android:text="星期三"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_xingqi"
            android:layout_alignTop="@id/tv_xingqi"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="#BDECFD"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/tv_xingqi"
            android:textColor="#BDECFD"
            android:layout_alignTop="@id/tv_xingqi"
            android:text="12/04"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_date"
            android:layout_alignTop="@id/tv_xingqi"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="#BDECFD"/>
        <TextView
            android:id="@+id/tv_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDECFD"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_date"
            android:layout_alignTop="@id/tv_xingqi"
            android:paddingLeft="10dp"
            android:text="26"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_er"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_below="@id/iv_logo"
        android:layout_alignLeft="@id/iv_logo"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="44dp"
        android:src="@mipmap/er_haha"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ 扫一扫进入门禁小程序 ]"
        android:textColor="#ff0353b2"
        android:layout_alignLeft="@id/iv_er"
        android:layout_below="@id/iv_er"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BDECFD"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_toRightOf="@id/iv_er"
        android:layout_alignTop="@id/iv_er"
        android:layout_marginLeft="40dp"
        android:text="注册成功！"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5秒后跳转到主界面，\n如若需要重新上传头像请点击“重新上传头像”按钮"
        android:textColor="#ffbdecfd"
        android:textSize="18sp"
        android:layout_alignLeft="@id/tv_text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_text"/>
    <TextView
        android:id="@+id/tv_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="#BDECFD"
        android:layout_alignLeft="@id/tv_info"
        android:background="#0353B2"
        android:layout_below="@id/tv_info"
        android:layout_marginTop="21dp"
        android:text="重新上传图片"/>
</RelativeLayout>