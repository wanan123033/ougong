<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000c23">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000c27">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/backicon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="438dp"
        android:layout_height="51dp"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="51dp"
        android:background="@mipmap/logo_ogmall"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginTop="-40dp"
        android:layout_marginRight="60dp"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="#BDECFD"
            android:paddingTop="-10dp"
            android:gravity="left|top"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="10:30"/>
        <TextView
            android:id="@+id/tv_xingqi"
            android:layout_below="@id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDECFD"
            android:textSize="16sp"
            android:text="星期三"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_xingqi"
            android:layout_alignTop="@id/tv_xingqi"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="#BDECFD"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/tv_xingqi"
            android:textColor="#BDECFD"
            android:layout_alignTop="@id/tv_xingqi"
            android:text="12/04"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/tv_date"
            android:layout_alignTop="@id/tv_xingqi"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="#BDECFD"/>
        <TextView
            android:id="@+id/tv_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDECFD"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/tv_date"
            android:layout_alignTop="@id/tv_xingqi"
            android:paddingLeft="10dp"
            android:text="26"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="481dp"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="33dp"
        android:background="@mipmap/register_bg">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#BDECFD"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="70dp"
            android:text="姓    名："/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_marginRight="38dp"
            android:hint="请输入姓名"
            android:paddingLeft="14dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#053D7B"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tv_name"/>
        <View
            android:id="@+id/view_ff"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#0353B2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv_name"/>
        <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#BDECFD"
        android:layout_below="@id/view_ff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:text="手机号："/>
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_phone"
            android:layout_marginRight="38dp"
            android:hint="请输入手机号"
            android:textSize="12sp"
            android:padding="5dp"
            android:inputType="phone"
            android:paddingLeft="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#053D7B"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tv_name"/>
        <View
            android:id="@+id/view_fff"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#0353B2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv_phone"/>
        <TextView
            android:id="@+id/tv_vode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#BDECFD"
            android:layout_below="@id/view_fff"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="70dp"
            android:text="验证码："/>
        <EditText
            android:id="@+id/et_vode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_vode"
            android:layout_marginRight="38dp"
            android:hint="请输入验证码"
            android:paddingLeft="14dp"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#053D7B"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/tv_name"/>
        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/et_vode"
            android:layout_alignTop="@id/et_vode"
            android:textColor="#BDECFD"
            android:textSize="14sp"
            android:text="获取验证码"/>
        <View
            android:id="@+id/view_ffff"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#0353B2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/tv_vode"/>
        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BDECFD"
            android:layout_below="@id/view_ffff"
            android:layout_alignLeft="@id/tv_phone"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="上传图像:"/>
        <TextView
            android:id="@+id/tv_picket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0353B2"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_toRightOf="@id/tv_topic"
            android:layout_alignTop="@id/tv_topic"
            android:textColor="#BDECFD"
            android:layout_marginLeft="13dp"
            android:text="拍照"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="58dp"
            android:paddingRight="58dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="#BDECFD"
            android:layout_below="@id/tv_picket"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:background="#0142FC"
            android:text="注册"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/rl_scan"
        android:layout_marginRight="80dp"/>
</RelativeLayout>