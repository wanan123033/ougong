<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top|center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="909dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:cardCornerRadius="@dimen/d5"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:padding="23dp">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="383dp"
                        android:layout_height="353dp"
                        android:layout_marginLeft="50dp"
                        android:scaleType="fitXY"
                        android:background="@color/color_f4f4f4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="45px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lineSpacingExtra="3dp"
                            android:maxLines="2"
                            android:textStyle="bold"
                            android:text="大水库就是大啊哈是打开啊是大水库和阿三大沙萨达萨达擦伤放大萨达和阿三大沙萨达萨达擦伤放大萨达"
                            android:textColor="@color/color_333333"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tv_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="31px"
                            android:ellipsize="end"
                            android:lineSpacingExtra="1px"
                            android:maxLines="2"
                            android:text="伤放大萨达和阿三大沙萨达萨达擦伤放大萨达"
                            android:textColor="@color/color_999999"
                            android:textSize="13dp" />



                        <LinearLayout
                            android:id="@+id/ll_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_size"
                            android:layout_marginTop="25px"
                            android:layout_toRightOf="@+id/iv_head"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/str_ys"
                                android:textColor="@color/color_999999"
                                android:textSize="13dp" />

                            <com.junshan.pub.widget.BaseGridView
                                android:id="@+id/gv_color"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:numColumns="3" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:layout_marginTop="15px"
                            android:layout_toRightOf="@+id/iv_head"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/str_gg"
                                android:textColor="@color/color_999999"
                                android:textSize="13dp" />

                            <com.junshan.pub.widget.BaseGridView
                                android:id="@+id/gv_gg"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:numColumns="3" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="149px"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="￥34234"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:text="34234"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/tv_price"
                                android:textColor="@color/color_cccccc"
                                android:textSize="32.6px" />
                            <ImageView
                                android:id="@+id/rb_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_share_on"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/d100"
                                android:textColor="@color/color_666666"
                                android:textSize="15dp" />
                            <ImageView
                                android:id="@+id/rb_collect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="40dp"
                                android:background="@drawable/selector_collect2"
                                android:text="@string/str_sc2"
                                android:textColor="@color/color_666666"
                                android:textSize="16dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="909dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="23dp"
                app:cardCornerRadius="@dimen/d5"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="23dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view1"
                            android:layout_width="9px"
                            android:layout_height="39px"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:ellipsize="end"
                            android:text="@string/str_scpxx"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#CFCFCF"
                        android:layout_marginTop="@dimen/d7"/>
                    <com.junshan.pub.widget.BaseGridView
                        android:id="@+id/gv_product_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="13dp"
                        android:verticalSpacing="14dp"
                        android:horizontalSpacing="40dp"
                        android:numColumns="3" />


                    <LinearLayout
                        android:id="@+id/ll_spxq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:layout_marginTop="@dimen/d14"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="9px"
                            android:layout_height="39px"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:ellipsize="end"
                            android:text="@string/str_spxq"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <View
                        android:id="@+id/ssl"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#CFCFCF"
                        android:layout_marginTop="@dimen/d7"/>
                    <LinearLayout
                        android:id="@+id/lv_product_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25px"
                        android:orientation="vertical" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</layout>