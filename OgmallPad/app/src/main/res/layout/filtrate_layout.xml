<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/color_f0f0f0">

        <LinearLayout
            android:layout_width="640dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_style_tile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_weight="1"
                    android:text="@string/str_fg"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/d16" />

                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/d14" />

                <CheckBox
                    android:id="@+id/cb_style"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/d20"
                    android:background="@drawable/selector_arr"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_f0f0f0" />

            <com.junshan.pub.widget.BaseGridView
                android:id="@+id/gv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:numColumns="6"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:verticalSpacing="@dimen/d15" />

            <LinearLayout
                android:id="@+id/ll_brand_tile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_weight="1"
                    android:text="@string/str_pp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/d16" />

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/d14" />

                <CheckBox
                    android:id="@+id/cb_brand"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/d20"
                    android:background="@drawable/selector_arr"
                    android:button="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_f0f0f0" />

            <GridView
                android:id="@+id/gv_brand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:verticalSpacing="@dimen/d15"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_price_tile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:layout_weight="1"
                    android:text="@string/str_jg"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/d16" />

                <CheckBox
                    android:id="@+id/cb_price"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/d20"
                    android:background="@drawable/selector_arr"
                    android:button="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_f0f0f0" />

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d30"
                    android:text="价格区间（元）"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/d12" />

                <EditText
                    android:id="@+id/et_min"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape_square_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_999999" />

                <EditText
                    android:id="@+id/et_max"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape_square_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/color_666666"
                    android:textSize="13dp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_type_left"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/str_cz2"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_type_right"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="@string/str_qd2"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible" />
        </LinearLayout>
    </FrameLayout>
</layout>