<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/d48"
            android:layout_marginRight="@dimen/d48"
            android:layout_marginTop="@dimen/d10">
            <ImageView
                android:id="@+id/fl1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:layout_marginRight="@dimen/d20"
                android:background="@mipmap/ic_rzjj" />
            <ImageView
                android:id="@+id/fl2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|bottom"
                android:background="@mipmap/ic_bkzq_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/d48"
            android:layout_marginRight="@dimen/d48"
            android:layout_marginBottom="@dimen/d10"
            android:layout_marginTop="@dimen/d2">
            <ImageView
                android:id="@+id/fl3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|top"
                android:layout_marginRight="@dimen/d20"
                android:background="@mipmap/ic_ppjj_icon"/>

            <ImageView
                android:id="@+id/fl4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|top"
                android:background="@mipmap/ic_gxsh_icon"/>

        </LinearLayout>
    </LinearLayout>
</layout>