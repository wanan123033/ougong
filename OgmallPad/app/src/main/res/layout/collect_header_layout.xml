<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_left"
            android:background="@drawable/shape_bg9"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.junshan.pub.widget.ClearEditText
                android:id="@+id/et_search"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/str_ss"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@mipmap/ic_search" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_edit"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_edit"
            android:button="@null"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_collect_edit"
            android:textSize="12dp" />
    </LinearLayout>
</layout>