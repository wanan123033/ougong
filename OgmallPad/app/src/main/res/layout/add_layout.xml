<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="550dp"
            android:layout_height="400dp"
            android:background="@mipmap/ic_add_classify"
            android:orientation="vertical"
            android:paddingBottom="65dp"
            android:paddingLeft="@dimen/d40"
            android:paddingRight="35dp"
            android:paddingTop="25dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="left|bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="22dp"
                android:background="@drawable/shape_grap_15">

                <ListView
                    android:id="@+id/lv"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="1dp"
                    android:dividerHeight="0dp"
                    android:scrollbars="none"
                    android:divider="@color/transparent"
                    android:layout_marginTop="12dp" />
                <com.ogmallpad.widget.AutoNextLineLinearlayout
                    android:id="@+id/gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d15"
                    android:layout_marginRight="@dimen/d15"
                    android:layout_toRightOf="@+id/lv" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="22dp"
                android:background="@drawable/shape_grap_15"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="30dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingTop="30dp">

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_hint15"
                            android:textColor="@color/color_666666"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/btn_cancel"
                                android:layout_width="65dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:text="@string/str_qx"
                                android:background="@drawable/shape_grap6"
                                android:textColor="@color/white"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/btn_yes"
                                android:layout_width="65dp"
                                android:layout_height="25dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:paddingRight="5dp"
                                android:layout_marginLeft="@dimen/d5"
                                android:background="@drawable/shape_red2"
                                android:text="@string/str_qr"
                                android:textColor="@color/white"
                                android:textSize="11dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginBottom="130dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_grap6"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/str_cz2"
                android:textColor="@color/white"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/d5"
                android:background="@drawable/shape_red2"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="@string/str_qd2"
                android:textColor="@color/white"
                android:textSize="11dp" />
        </LinearLayout>
    </FrameLayout>
</layout>