<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_search_bg"
                android:gravity="center|left"
                android:hint="@string/str_hint7"
                android:imeOptions="actionSearch"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_gravity="right" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/d15">

            <CheckBox
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/str_zrm"
                android:paddingLeft="@dimen/d13"
                android:paddingRight="@dimen/d13"
                android:checked="true"
                android:paddingTop="@dimen/d4"
                android:paddingBottom="@dimen/d4"
                android:background="@drawable/selecter_red2"
                android:button="@null"
                android:textColor="@color/color_c73c3a"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/tv_newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/str_zx"
                    android:paddingLeft="@dimen/d13"
                    android:paddingRight="@dimen/d13"
                    android:paddingTop="@dimen/d4"
                    android:paddingBottom="@dimen/d4"
                    android:background="@drawable/selecter_red2"
                    android:button="@null"
                    android:textColor="@color/color_333333"
                    android:textSize="13dp" />
                <CheckBox
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="@dimen/d13"
                    android:paddingRight="@dimen/d13"
                    android:paddingTop="@dimen/d4"
                    android:paddingBottom="@dimen/d4"
                    android:background="@drawable/selecter_red2"
                    android:button="@null"
                    android:text="@string/str_gg2"
                    android:textColor="@color/color_333333"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/iv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/ic_price_defualt" />

            </LinearLayout>
            <com.junshan.pub.widget.ClearEditText
                android:id="@+id/et_minPrice"
                android:inputType="number"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginLeft="25dp"
                android:maxLength="11"
                android:maxLines="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="最小价"
                android:background="@drawable/shape_hbdp"
                android:textColor="@color/black"
                android:textSize="12dp" />
            <View
                android:layout_width="@dimen/d10"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/d5"
                android:visibility="invisible"
                android:background="@color/black"/>
            <com.junshan.pub.widget.ClearEditText
                android:id="@+id/et_maxPrice"
                android:inputType="number"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_marginLeft="@dimen/d5"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:background="@drawable/shape_hbdp"
                android:textColor="@color/black"
                android:hint="最高价"
                android:textSize="12dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_filtrate"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/color_E70052"
                android:gravity="center"
                android:text="@string/str_sx"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="right" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/d10"
            android:background="#CFCFCF"/>
    </LinearLayout>
</layout>