<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/d100" />
            <stroke android:color="#E7E7E7" android:width="@dimen/d1" android:dashGap="@dimen/d1" android:dashWidth="@dimen/d1"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:color="@color/color_E70052"  android:width="@dimen/d1"/>
            <corners android:radius="@dimen/d100" />
        </shape>
    </item>
</selector>