<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/name"
            android:text="王三三"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintStart_toEndOf="@id/name"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@id/name"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="[默认]"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:id="@+id/is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/phone"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:textSize="15sp"
            android:textColor="#666666"
            android:id="@+id/address"
            android:gravity="start"
            android:text="balabaklbaiihdfiernpjrfgwe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginTop="13dp"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/register_divder"
            style="@style/account_divider_horizontal_1px"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/address"/>

    <CheckBox
            android:clickable="false"
            android:id="@+id/isDefault"
            app:layout_constraintTop_toBottomOf="@id/register_divder"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:button="@drawable/checkbox"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/address_delect"
            app:layout_constraintTop_toBottomOf="@id/register_divder"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:drawablePadding="2dp"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:textColor="#666666"
            android:text="删除"
            android:drawableLeft="@drawable/address_delect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/address_iedt"
            app:layout_constraintTop_toBottomOf="@id/register_divder"
            app:layout_constraintRight_toLeftOf="@id/address_delect"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="15dp"
            android:drawablePadding="2dp"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:textColor="#666666"
            android:text="编辑"
            android:drawableLeft="@drawable/address_idet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    <View
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/address_delect"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
</android.support.constraint.ConstraintLayout>