<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:visibility="gone"
            android:id="@+id/add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333"
            android:textSize="18sp"
            android:text="新增收货地址"/>

    <TextView
            android:visibility="gone"
            android:id="@+id/add_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/add_address"
            app:layout_constraintStart_toStartOf="@id/add_address"
            android:layout_marginTop="11dp"
            android:text="暂无收货地址，请点击后添加地址"
            android:textColor="#999999"/>

    <TextView
            android:id="@+id/address_name"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="23dp"
            android:layout_marginStart="16dp"
            android:text="收货人： "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/is_default"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/address_name"
            app:layout_constraintTop_toTopOf="@id/address_name"
            app:layout_constraintBottom_toBottomOf="@id/address_name"
            android:textColor="#ffffff"
            android:background="#000000"
            android:text="默认"
            android:textSize="10sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="2dp"
            />
    <TextView
            android:id="@+id/address_phone"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/address_name"
            app:layout_constraintBottom_toBottomOf="@id/address_name"
            app:layout_constraintStart_toEndOf="@id/address_name"
            app:layout_constraintEnd_toStartOf="@id/enter_add_address"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/order_usless1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址:  "
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textColor="#333333"/>
    <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/order_usless1"
            android:layout_marginStart="2dp"
            android:gravity="start"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/address_name"
            app:layout_constraintEnd_toEndOf="@id/enter_add_address"
            android:layout_marginEnd="37dp"
            android:textColor="#333333"/>
    <View
            android:layout_marginEnd="31dp"
            android:id="@+id/enter_add_address"
            android:layout_width="10dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/divder"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/to_right_black_bg"/>

    <View
            android:id="@+id/adress_container"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divder"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/add_address_bg_divder"
            app:layout_constraintBottom_toTopOf="@id/divder"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"
            android:layout_marginTop="110dp"
            android:id="@+id/divder"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="#333333"
            android:textSize="18sp"
            android:text="订单商品"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divder"/>

</android.support.constraint.ConstraintLayout>