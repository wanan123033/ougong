<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

    <View
            android:layout_marginTop="18dp"
            android:layout_width="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#ffffff"
            android:layout_height="1dp"/>


    <ImageView
            android:id="@+id/ice"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="93dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_height="93dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:src="@drawable/test_furnate"/>

    <TextView
            android:layout_marginEnd="17dp"
            android:layout_marginStart="12dp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="@id/ice"
            app:layout_constraintLeft_toRightOf="@id/ice"
            android:layout_width="0dp"
            android:textColor="#333333"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活"/>

    <TextView
            android:id="@+id/details1"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/title"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/price"
            app:layout_constraintVertical_bias="0.36"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:text="组合沙发"
            android:ellipsize="end"
            android:textColor="#999999"
            android:maxLines="1"
            android:gravity="start"
            android:layout_height="wrap_content"/>

    <!--<TextView-->
            <!--android:id="@+id/details2"-->
            <!--app:layout_constraintTop_toTopOf="@id/details1"-->
            <!--app:layout_constraintLeft_toRightOf="@id/details1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="#999999"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:text="浅蓝色"-->
            <!--android:layout_height="wrap_content"/>-->

    <TextView
            android:layout_marginEnd="17dp"
            android:id="@+id/price"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintLeft_toRightOf="@id/ice"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥25000"/>

    <TextView
            android:id="@+id/number"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginEnd="26dp"
            android:textSize="12sp"
            android:text="×1"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>
