<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <CheckBox
            app:layout_constraintTop_toTopOf="@id/ice"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="30dp"
            android:button="@null"
            android:background="@drawable/shopcar_checkbox_bg"
            android:id="@+id/check_box"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <ImageView
            android:id="@+id/ice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/check_box"
            android:layout_width="93dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_height="93dp"
            android:src="@drawable/catery_child_default"/>

    <TextView
            android:layout_marginEnd="25dp"
            android:layout_marginStart="12dp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="@id/ice"
            app:layout_constraintLeft_toRightOf="@id/ice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            android:maxLines="2"
            android:textColor="#000000"
            android:ellipsize="end"
            android:text="品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活品竹生活"/>

    <TextView
            android:id="@+id/details1"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/price"
            app:layout_constraintVertical_bias="0.36"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_marginEnd="16dp"
            android:textColor="#999999"
            android:text="组合沙发"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/details2"
            app:layout_constraintTop_toTopOf="@id/details1"
            app:layout_constraintLeft_toRightOf="@id/details1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="#999999"
            android:layout_marginStart="8dp"
            android:text="浅蓝色"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="17dp"
            android:id="@+id/price"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintLeft_toRightOf="@id/ice"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥25000"/>

    <ImageView
            android:layout_marginEnd="17dp"
            android:id="@+id/pluse"
            android:background="@drawable/shopcar_pluse"
            android:layout_width="20dp"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="20dp"/>
    <TextView
            android:id="@+id/number"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintTop_toTopOf="@id/pluse"
            app:layout_constraintRight_toLeftOf="@id/pluse"
            android:layout_width="wrap_content"
            android:layout_marginRight="6dp"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="1"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/minus"
            android:background="@drawable/shopcar_minus"
            android:layout_width="20dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="@id/ice"
            app:layout_constraintRight_toLeftOf="@id/number"
            android:layout_height="20dp"/>


    <View
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/ice"
            android:layout_width="0dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#cccccc"
            android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>
