<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#55FFFFFF">
    <View
            android:id="@+id/view_dimission"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="15dp"
                    android:text="筛选条件"/>
            <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/img_close"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_title"/>
        </RelativeLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="500dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:textColor="#333333"
                        android:layout_marginTop="21dp"
                        android:text="风格"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/gv_fengge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="18dp"
                        android:verticalSpacing="18dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scrollbars="none"
                        android:numColumns="2"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:text="品牌"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/gv_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scrollbars="none"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:text="价格"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                    <EditText
                            android:id="@+id/et_minPrice"
                            android:layout_width="105dp"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:hint="最小价"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:background="@null"/>
                    <View
                            android:layout_width="30dp"
                            android:layout_height="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="#333333"/>
                    <EditText
                            android:id="@+id/et_maxPrice"
                            android:layout_width="105dp"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:hint="最高价"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="23dp">
                    <TextView
                            android:id="@+id/tv_reset"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="重置"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/checklin_reset_bg"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tv_commit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="确定"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/checklin_commit_bg"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>