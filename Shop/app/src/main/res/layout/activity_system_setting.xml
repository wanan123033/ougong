<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        tools:context=".activity.Account.register.RegisterActivity">

    <include
            android:id="@+id/title_lin"
            layout="@layout/include_setting_back_title"/>


    <android.support.constraint.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_lin"
            android:id="@+id/VersionNameLin"
            style="@style/content_item_white">

        <TextView

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/content_item_lf_tv"
                android:text="版本信息"/>

        <TextView
                android:id="@+id/version"
                app:layout_constraintEnd_toStartOf="@id/usless4"
                android:text="1.0"
                android:layout_marginEnd="10dp"
                style="@style/content_item_lf_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/usless4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/content_item_rt_img"/>
    </android.support.constraint.ConstraintLayout>

    <View
            app:layout_constraintTop_toBottomOf="@id/VersionNameLin"
            style="@style/divider_horizontal_1px"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@id/VersionNameLin"

            android:id="@+id/quit_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#ffffff"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/quit_bg"/>
</android.support.constraint.ConstraintLayout>