<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="120dp">
    <ImageView
            android:id="@+id/iv_img"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:src="@drawable/img_sp_my"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_img"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:text="图比家具双位"/>
    <LinearLayout
            android:id="@+id/rl_ge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_name"
            android:padding="8dp"
            android:background="@drawable/shape_drap_bg"
            android:layout_alignLeft="@id/tv_name">
        <TextView
                android:id="@+id/tv_spec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="选择：100*.../白色/实木"
                android:maxLines="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_xia2"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="13dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_ge"
            android:layout_alignLeft="@id/rl_ge"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="￥1999.26"/>
    <TextView
            android:id="@+id/tv_insert_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="6dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="加入配置单"/>
</RelativeLayout>