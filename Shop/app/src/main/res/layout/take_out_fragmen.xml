<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:layout_width="273dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    <TextView
            android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="申请提现"
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/usless1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="可提现金额:"
            android:layout_marginStart="59dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/can_money"
            app:layout_constraintStart_toEndOf="@id/usless1"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="test"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/usless2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usless1"
            android:text="提现金额:"

            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginStart="59dp"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText

            android:text="600"
            android:textColor="#000000"
            android:textSize="15sp"
            android:id="@+id/input_no"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="@id/usless2"
            app:layout_constraintStart_toEndOf="@id/usless2"
            android:background="@drawable/info_edit_bg"
            android:layout_width="85dp"
            android:layout_height="27dp"/>

    <TextView
            android:textColor="#000000"
            android:textSize="9sp"
            android:text="请输入大于或等于1000的数字"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="57dp"
            app:layout_constraintTop_toBottomOf="@id/input_no"
            android:id="@+id/worring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/worring"
            android:id="@+id/no"
            android:gravity="center"
            android:text="取消"
            android:textSize="13sp"
            android:textColor="#666666"
            android:background="@drawable/info_edit_bg"
            app:layout_constraintRight_toLeftOf="@id/no"
            android:layout_width="99dp"
            android:layout_height="33dp"/>


    <TextView
            app:layout_constraintStart_toEndOf="@id/no"
            android:layout_marginTop="36dp"
            android:text="确定"

            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/worring"
            android:id="@+id/yes"
            android:layout_width="99dp"
            android:layout_height="33dp"/>
    
    <View
        app:layout_constraintTop_toBottomOf="@id/no"
            android:layout_width="match_parent"
            android:layout_height="41dp"/>
</android.support.constraint.ConstraintLayout>