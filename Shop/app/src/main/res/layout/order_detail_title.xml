<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:id="@+id/order_detail_title_bg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#000000"/>

    <View
            android:id="@+id/order_detail_title_ice"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/order_detail_payed_bg"
            app:layout_constraintTop_toTopOf="@id/order_detail_title_bg"
            app:layout_constraintBottom_toBottomOf="@id/order_detail_title_bg"
            app:layout_constraintStart_toStartOf="@id/order_detail_title_bg"
            android:layout_marginStart="31dp"
            />
    <TextView
            android:id="@+id/order_detail_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付"

            app:layout_constraintTop_toTopOf="@id/order_detail_title_bg"
            app:layout_constraintBottom_toBottomOf="@id/order_detail_title_bg"
            app:layout_constraintStart_toEndOf="@id/order_detail_title_ice"
            android:layout_marginStart="6dp"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

    <TextView
            android:id="@+id/useless1"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="物流公司:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_detail_title_bg"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/post_way"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text=""
            app:layout_constraintStart_toEndOf="@id/useless1"
            app:layout_constraintTop_toTopOf="@id/useless1"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/usless2"
            android:textSize="15sp"
            android:textColor="#333333"
            android:text="物流单号:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/useless1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/id_id"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="6548456"
            app:layout_constraintStart_toEndOf="@id/usless2"
            app:layout_constraintTop_toTopOf="@id/usless2"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/usless2"
            android:layout_marginTop="21dp"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
</android.support.constraint.ConstraintLayout>