            style="@style/account_divider_horizontal_1px"
            app:layout_constraintTop_toBottomOf="@id/new_phone_check_no"/>




    <TextView
            android:layout_marginTop="120dp"
            android:id="@+id/change_phone"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_divder4"
            android:text="确定"
            android:height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/useless5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/change_phone"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:text="温馨提示"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:drawableLeft="@drawable/woring"/>
    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/useless5"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:text="手机号码修改后，需要用新的手机号进行登录。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
