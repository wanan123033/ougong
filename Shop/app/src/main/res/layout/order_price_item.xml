<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:id="@+id/usless_diveder"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
    <TextView
            android:id="@+id/total_name"
            android:text="商品合计:"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/usless_diveder"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/order_total"
            android:text="0.00"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/total_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/serve_name"
            android:text="服务费:"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/total_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/order_serve"
            android:text="0.0"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/serve_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/wood_name"
            android:text="短运费:"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/serve_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/order_wood"
            android:text="0.0"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/wood_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/transport_name"
            android:text="木架费:"
            android:textColor="#666666"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/wood_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/order_transport"
            android:text="0.0"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/transport_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>