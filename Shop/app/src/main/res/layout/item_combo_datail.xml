<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
                android:id="@+id/rl_dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/combo_datail_item_bg"
                android:layout_marginTop="15dp">
    <TextView
            android:id="@+id/tv_roomType"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:gravity="center"
            android:textSize="25sp"
            android:text="客厅"
            android:textColor="#FFFFFF"
            android:background="#333333"/>
    <TextView
            android:id="@+id/tv_yixuan"
            android:layout_width="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="21dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tv_roomType"
            android:text="6"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_num_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_yixuan"
            android:layout_alignLeft="@id/tv_yixuan"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            android:textColor="#999999"
            android:text="已选商品(件)"/>
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_yixuan"
            android:layout_toRightOf="@id/tv_roomType"
            android:layout_marginLeft="123dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="0"/>
    <TextView
            android:id="@+id/tv_price_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_alignLeft="@id/tv_price"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:text="套餐优惠(元)"/>
    <ImageView
            android:id="@+id/iv_xia"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/img_xia"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/xv_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/tv_roomType"
            android:visibility="gone"/>
</LinearLayout>