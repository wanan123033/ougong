<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/rl_haha"
              android:layout_width="match_parent"
              android:layout_height="126dp">
    <ImageView
            android:id="@+id/iv_img"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@id/iv_img"
            android:layout_alignTop="@id/iv_img"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="商品名称"
            android:layout_marginLeft="11dp"/>
    <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:text="规格"
            android:layout_below="@id/tv_name"/>
    <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_spec"
            android:layout_marginTop="5dp"
            android:text="颜色"
            android:textColor="#999999"/>
    <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/tv_color"
            android:layout_marginTop="5dp"
            android:text="X1"/>
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_alignLeft="@id/tv_color"
            android:layout_marginRight="20dp"
            android:layout_below="@id/tv_color"
            android:layout_marginTop="5dp"
            android:text="￥1155.22"/>
    <TextView
            android:id="@+id/tv_pos"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:gravity="center"
            android:text="2"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginLeft="7dp"
            android:background="@drawable/shape_combo_pos"/>
</RelativeLayout>