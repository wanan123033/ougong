<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:background="#FFFFFF">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="80dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:text="订单编号:11584216588627433"/>
        <TextView
                android:id="@+id/tv_payType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="未支付"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="品牌"/>
        <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="2019-10-15 15:25:26"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#0a0a0a"
                android:text="共2件商品，合计："/>
        <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:textColor="#0a0a0a"
                android:layout_marginTop="10dp"
                android:text="￥258.00"/>
        <TextView
                android:id="@+id/tv_cannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140dp"
                android:layout_marginTop="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:layout_below="@id/tv_price"
                android:paddingRight="20dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/checklin_item_bg_nomal"
                android:text="取消订单"/>
        <TextView
                android:id="@+id/tv_buy_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:layout_alignTop="@id/tv_cannel"
                android:paddingRight="20dp"
                android:paddingBottom="6dp"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="立即支付"/>
        <TextView
                android:id="@+id/tv_qrsh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140dp"
                android:layout_marginTop="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:layout_below="@id/tv_price"
                android:paddingRight="20dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/checklin_item_bg_nomal"
                android:text="确认收货"/>
        <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140dp"
                android:layout_marginTop="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:layout_below="@id/tv_price"
                android:paddingRight="20dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/checklin_item_bg_nomal"
                android:text="删除订单"/>
        <TextView
                android:id="@+id/tv_buy_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:layout_alignTop="@id/tv_cannel"
                android:paddingRight="20dp"
                android:paddingBottom="6dp"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="再次购买"/>
    </RelativeLayout>
</LinearLayout>