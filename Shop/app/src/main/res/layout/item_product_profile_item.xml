<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="126dp" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:id="@+id/iv_img"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_alignTop="@id/iv_img"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="商品名称"
            android:layout_marginLeft="11dp"/>
    <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:text="规格"
            android:layout_below="@id/tv_name"/>
    <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_spec"
            android:layout_marginTop="5dp"
            android:text="颜色"
            android:textColor="#999999"/>
    <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_color"
            android:layout_marginTop="5dp"
            android:text="￥188.5"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_below="@id/tv_color">
        <ImageView
                android:id="@+id/iv_jian"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/img_jian"/>
        <TextView
                android:id="@+id/tv_sum"
                android:layout_width="34dp"
                android:gravity="center"
                android:layout_height="21dp"
                android:textColor="#999999"
                android:text="1"/>
        <ImageView
                android:id="@+id/iv_jia"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/img_jia"/>
    </LinearLayout>
</RelativeLayout>