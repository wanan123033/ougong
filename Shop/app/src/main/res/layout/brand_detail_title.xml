<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="wrap_content"
        android:minHeight="200dp">

    <ImageView
            android:id="@+id/brand_ice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/catery_child_default"
            android:layout_marginTop="15dp"
            android:layout_width="91dp"
            android:layout_height="52dp"/>

    <TextView
            android:id="@+id/usless1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/brand_ice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/product_count"
            android:textSize="15sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textColor="#333333"
            android:text="在售商品: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/brand_ice"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="0件"
            app:layout_constraintStart_toEndOf="@id/usless1"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <ImageView

            android:id="@+id/brand_pic"
            android:src="@drawable/b2_1"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/product_count"
            android:layout_width="match_parent"
            android:layout_height="210dp"/>
    <com.baigui.commonview.widget.ReadMoreTextView
            app:layout_constraintTop_toBottomOf="@id/brand_pic"
            android:id="@+id/brand_describe"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp"
            android:textSize="13sp"
            android:text="欧工国际是一家以设计为驱动的一站式软装平台"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginTop="14dp"
            app:trimLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            android:lineSpacingMultiplier="1.25"
            android:layout_width="0dp"
            android:textColor="#666666"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="17dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/brand_describe"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
</android.support.constraint.ConstraintLayout>