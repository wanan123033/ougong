<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/name"
            android:layout_marginStart="17dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/usless_diveder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    <TextView
            android:id="@+id/phone"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/usless_diveder"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            app:layout_constraintTop_toTopOf="parent"
            />

    <View
            android:background="#f5f5f5"
            android:id="@+id/usless_diveder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="38.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="0dp"
            android:layout_height="1dp"/>


    <android.support.constraint.ConstraintLayout

            android:id="@+id/usless1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/usless2"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder"
            app:layout_constraintBottom_toTopOf="@id/usless_diveder1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/item_pay_title"
                />


        <TextView

                android:id="@+id/item_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:textColor="#999999"
                android:textSize="12sp"
                android:text="支出金额（元）"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_pay"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout

            android:id="@+id/usless2"
            app:layout_constraintStart_toEndOf="@id/usless1"
            app:layout_constraintEnd_toStartOf="@id/usless3"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder"
            app:layout_constraintBottom_toTopOf="@id/usless_diveder1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/can_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/can_pay_title"
                />


        <TextView

                android:id="@+id/can_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:textSize="12sp"
                android:textColor="#999999"
                android:text="余额（元）"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/can_pay"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout

            android:id="@+id/usless3"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder"
            app:layout_constraintBottom_toTopOf="@id/usless_diveder1"
            app:layout_constraintStart_toEndOf="@id/usless2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <TextView

                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:textColor="#999999"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

    </android.support.constraint.ConstraintLayout>

    <View
            android:background="#f5f5f5"
            android:id="@+id/usless_diveder1"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="83dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

    <TextView
            android:id="@+id/order_no"
            android:layout_marginStart="17dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/usless_diveder2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder1"/>

    <TextView
            android:id="@+id/time"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/usless_diveder2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder1"
            />

    <View
            android:id="@+id/usless_diveder2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"
            app:layout_constraintTop_toBottomOf="@id/usless_diveder1"
            android:layout_marginTop="34dp"
            />

</android.support.constraint.ConstraintLayout>