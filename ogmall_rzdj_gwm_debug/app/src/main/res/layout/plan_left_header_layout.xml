<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_white"
            android:focusableInTouchMode="true"
            android:gravity="center"
            app:layout_heightPercent="12%w"
            app:layout_marginBottomPercent="5%w"
            app:layout_marginLeftPercent="10%w"
            app:layout_marginTopPercent="5%w"
            app:layout_widthPercent="80%w">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_search"
                app:layout_heightPercent="60%h"
                app:layout_marginLeftPercent="5%w"
                app:layout_widthPercent="60%h" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@color/color_eeeeee"
                app:layout_heightPercent="60%h"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginRightPercent="5%w" />

            <com.junshan.pub.widget.ClearEditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/str_qsrfamc"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                app:layout_marginRightPercent="5%w"
                app:layout_textSizePercent="40%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee" />

    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>