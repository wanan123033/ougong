<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d26"
                android:text="@string/str_xzgg"
                android:textColor="@color/color_787878"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginBottom="@dimen/d14"
                android:layout_marginRight="@dimen/d24"
                android:layout_marginTop="@dimen/d14"
                android:src="@mipmap/ic_close" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hint"
            android:background="@color/color_f0f0f0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_hint1"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_marginTop="@dimen/d34"
                android:gravity="right|center"
                android:text="@string/str_ggmc"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <com.junshan.pub.widget.ClearEditText
                android:hint="@string/str_qsrggmc"
                android:singleLine="true"
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="61dp"
                android:layout_marginTop="@dimen/d34"
                android:layout_toRightOf="@+id/tv_hint1"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/d12"
                android:paddingRight="@dimen/d12"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hint2"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint1"
                android:layout_marginTop="@dimen/d24"
                android:gravity="right|center"
                android:text="@string/str_gg2"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <com.junshan.pub.widget.ClearEditText
                android:hint="@string/str_qsrgg"
                android:singleLine="true"
                android:id="@+id/et_size"
                android:layout_width="193dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint1"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="61dp"
                android:layout_marginTop="@dimen/d24"
                android:layout_toRightOf="@+id/tv_hint1"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/d12"
                android:paddingRight="@dimen/d12"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hint3"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint2"
                android:layout_marginTop="@dimen/d24"
                android:gravity="right|center"
                android:text="@string/str_ys2"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <com.junshan.pub.widget.ClearEditText
                android:hint="@string/str_qsrys"
                android:singleLine="true"
                android:id="@+id/et_color"
                android:layout_width="193dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint2"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="61dp"
                android:layout_marginTop="@dimen/d24"
                android:layout_toRightOf="@+id/tv_hint1"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/d12"
                android:paddingRight="@dimen/d12"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hint4"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint3"
                android:layout_marginTop="@dimen/d24"
                android:gravity="right|center"
                android:text="@string/str_yj"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <com.ogmamllpadnew.widget.NumberEditText
                android:hint="@string/str_qsryj"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:id="@+id/et_old_price"
                android:layout_width="193dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint3"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="61dp"
                android:layout_marginTop="@dimen/d24"
                android:layout_toRightOf="@+id/tv_hint1"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/d12"
                android:paddingRight="@dimen/d12"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hint5"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint4"
                android:layout_marginTop="@dimen/d24"
                android:gravity="right|center"
                android:text="@string/str_xsj"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <com.ogmamllpadnew.widget.NumberEditText
                android:hint="@string/str_qsrxsj"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:id="@+id/et_price"
                android:layout_width="193dp"
                android:layout_height="34dp"
                android:layout_below="@+id/tv_hint4"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="61dp"
                android:layout_marginTop="@dimen/d24"
                android:layout_toRightOf="@+id/tv_hint1"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/d12"
                android:paddingRight="@dimen/d12"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hint6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hint1"
                android:layout_marginTop="@dimen/d34"
                android:layout_toRightOf="@+id/et_size"
                android:gravity="right|center"
                android:text="@string/str_ggt"
                android:textColor="@color/color_787878"
                android:textSize="14sp" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_upload"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_below="@+id/tv_hint6"
                android:layout_marginRight="@dimen/d62"
                android:layout_marginTop="@dimen/d11"
                android:layout_toRightOf="@+id/et_size"
                android:background="@mipmap/ic_upload_image" />

            <TextView
                android:id="@+id/tv_hint7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_upload"
                android:layout_marginTop="@dimen/d8"
                android:layout_toRightOf="@+id/et_size"
                android:gravity="right|center"
                android:text="@string/str_hint9"
                android:textColor="@color/color_787878"
                android:textSize="8sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d18"
            android:layout_marginTop="@dimen/d38"
            android:gravity="center|right">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="69dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_grap3"
                android:text="@string/str_qx"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="69dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d24"
                android:background="@drawable/shape_red2"
                android:text="@string/str_tj"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>