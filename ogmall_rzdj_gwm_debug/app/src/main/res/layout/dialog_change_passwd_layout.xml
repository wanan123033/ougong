<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="12%h">

            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_xgmm"
                android:textColor="@color/color_787878"
                app:layout_marginBottomPercent="3%h"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginTopPercent="3%h"
                app:layout_textSizePercent="40%h" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_close"
                app:layout_heightPercent="40%h"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="40%h" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hint"
            android:background="@color/color_f0f0f0"
            app:layout_marginBottomPercent="6%h" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            app:layout_heightPercent="15%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/str_jmm"
                android:textColor="@color/color_787878"
                app:layout_marginLeftPercent="5%w"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="20%w" />

            <com.junshan.pub.widget.ClearEditText
                android:maxLength="20"
                android:singleLine="true"
                android:id="@+id/et_old_passwd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:hint="@string/str_qsrjmm"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/color_787878"
                android:textColorHint="@color/color_999999"
                app:layout_heightPercent="60%h"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="40%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            app:layout_heightPercent="15%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/str_xmm"
                android:textColor="@color/color_787878"
                app:layout_marginLeftPercent="5%w"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="20%w" />

            <com.junshan.pub.widget.ClearEditText
                android:maxLength="20"
                android:singleLine="true"
                android:id="@+id/et_new_passwd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:hint="@string/str_qsrxmm"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/color_787878"
                android:textColorHint="@color/color_999999"
                app:layout_heightPercent="60%h"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="40%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            app:layout_heightPercent="15%h">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/str_qrmm"
                android:textColor="@color/color_787878"
                app:layout_marginLeftPercent="5%w"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="20%w" />

            <com.junshan.pub.widget.ClearEditText
                android:maxLength="20"
                android:singleLine="true"
                android:id="@+id/et_query_passwd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_grap2"
                android:gravity="center|left"
                android:hint="@string/str_qsrxmm"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/color_787878"
                android:textColorHint="@color/color_999999"
                app:layout_heightPercent="60%h"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="40%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|right"
            app:layout_heightPercent="15%h"
            app:layout_marginTopPercent="10%h">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_grap3"
                android:text="@string/str_qx"
                android:textColor="@color/white"
                app:layout_heightPercent="50%h"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="13%w" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_red2"
                android:text="@string/str_tj2"
                android:textColor="@color/white"
                app:layout_heightPercent="50%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginRightPercent="10%w"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="13%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>