<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/ic_collect" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d13"
            android:text="@string/str_wdsc"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_collect_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:drawablePadding="@dimen/d5"
            android:drawableRight="@mipmap/ic_mine_arrows_right"
            android:text="@string/str_ckwdsc"
            android:textColor="@color/color_787878"
            android:textSize="10sp" />
    </LinearLayout>
</layout>
