<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/d20"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/d1"
            android:src="@mipmap/ic_delete" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d15"
            android:layout_toRightOf="@+id/iv_delete"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_design" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d3"
            android:layout_toRightOf="@+id/iv_head"
            android:singleLine="true"
            android:text="亲赴黑色的好看"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d11" />

        <TextView
            android:id="@+id/tv_gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d1"
            android:layout_toRightOf="@+id/iv_head"
            android:text="亲赴黑色的好看"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/d9" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gg"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d3"
            android:layout_toRightOf="@+id/iv_head"
            android:text="￥567.99"
            android:textColor="@color/color_E70052"
            android:textSize="@dimen/d12" />

        <ImageView
            android:id="@+id/iv_jia"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_gg"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/ic_jia" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gg"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toLeftOf="@+id/iv_jia"
            android:text="1"
            android:textSize="@dimen/d13" />

        <ImageView
            android:id="@+id/iv_jian"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tv_gg"
            android:layout_toLeftOf="@+id/tv_num"
            android:src="@mipmap/ic_jian" />
    </RelativeLayout>
</layout>