<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingBottom="30dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="133dp"
            android:layout_height="118dp"
            android:layout_marginLeft="@dimen/d35"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_design" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d35"
            android:layout_toRightOf="@+id/iv_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="文联美灯城 吊灯 新中式风格 全铜+玻璃+原木 4头/6头/8头"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/d35"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="@string/str_ys"
            android:textColor="@color/color_787878"
            android:textSize="10sp" />

        <com.ogmamllpadnew.widget.AutoNextLineLinearlayout
            android:id="@+id/gv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_color"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gv_color"
            android:layout_marginLeft="@dimen/d35"
            android:layout_marginTop="@dimen/d10"
            android:layout_toRightOf="@+id/iv_head"
            android:text="@string/str_cc"
            android:textColor="@color/color_787878"
            android:textSize="10sp" />

        <com.ogmamllpadnew.widget.AutoNextLineLinearlayout
            android:id="@+id/gv_gg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gv_color"
            android:layout_marginTop="@dimen/d5"
            android:layout_toRightOf="@+id/tv_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_below="@+id/gv_gg"
            android:layout_marginLeft="@dimen/d35"
            android:layout_marginTop="@dimen/d12"
            android:layout_toRightOf="@+id/iv_head"
            android:background="#1ae70052"
            android:text="￥567.99"
            android:textColor="@color/transparent"
            android:textSize="15sp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gv_gg"
            android:layout_marginLeft="@dimen/d35"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="￥567.99"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gv_gg"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginTop="@dimen/d8"
            android:layout_toRightOf="@+id/tv_price"
            android:text="￥567.99"
            android:textColor="@color/color_787878"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/gv_gg"
            android:background="@drawable/shape_red"
            android:text="@string/str_jrpzd"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>
</layout>