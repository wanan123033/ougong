<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/divider"
            app:layout_heightPercent="9%w">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d10"
                android:background="@color/color_dddddd" />

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d5"
                android:layout_marginRight="@dimen/d5" />

            <TextView
                android:id="@+id/tv_bh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_design"
                app:layout_heightPercent="6%w" />

            <TextView
                android:id="@+id/tv_classify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center|left"
                android:lineSpacingExtra="@dimen/d3"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d5"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.2%w" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <TextView
                android:id="@+id/tv_status1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <TextView
                android:id="@+id/tv_status2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="1.3%w" />

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tj3"
                    android:textColor="@color/color_E70052"
                    app:layout_textSizePercent="8%w" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_commit"
                    android:text="@string/str_xg"
                    android:textColor="@color/color_E70052"
                    app:layout_textSizePercent="8%w" />

                <TextView
                    android:id="@+id/tv_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_edit"
                    android:text="@string/str_gggl"
                    android:textColor="@color/color_E70052"
                    app:layout_textSizePercent="8%w" />

                <TextView
                    android:id="@+id/tv_putaway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_commit"
                    android:text="@string/str_sj"
                    android:textColor="@color/color_E70052"
                    app:layout_marginTopPercent="6%w"
                    app:layout_textSizePercent="8%w" />

                <TextView
                    android:id="@+id/tv_sold_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_commit"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_putaway"
                    android:text="@string/str_xj"
                    android:textColor="@color/color_E70052"
                    app:layout_marginTopPercent="6%w"
                    app:layout_textSizePercent="8%w" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_commit"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_sold_out"
                    android:text="@string/str_sc2"
                    android:textColor="@color/color_E70052"
                    app:layout_marginTopPercent="6%w"
                    app:layout_textSizePercent="8%w" />

            </com.zhy.android.percent.support.PercentRelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d10"
                android:background="@color/color_dddddd" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_dddddd" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>