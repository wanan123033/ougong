<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f8f8f8"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            app:layout_heightPercent="14%w">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="北欧风格"
                android:textColor="@color/color_333333"
                app:layout_marginLeftPercent="100%h"
                app:layout_textSizePercent="30%h" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                app:layout_heightPercent="40%h"
                app:layout_textSizePercent="25%h"
                app:layout_widthPercent="40%h" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_arrows_bottom_small"
                app:layout_heightPercent="30%h"
                app:layout_marginLeftPercent="80%h"
                app:layout_marginRightPercent="50%h"
                app:layout_widthPercent="30%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f0f0f0" />

        <com.junshan.pub.widget.BaseListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />
    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>