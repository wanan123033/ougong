<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/fl_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.87" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f0f0f0" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/d6"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/d6">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d30"
                android:background="@drawable/shape_red3"
                android:text="@string/str_tjfl"
                android:textColor="@color/color_E70052"
                android:textSize="@dimen/d11" />

            <TextView
                android:id="@+id/tv_select_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d40"
                android:text="@string/str_ktzj2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d12" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvall_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d60"
                android:layout_marginRight="@dimen/d50"
                android:text="@string/str_hint2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/d12" />

            <ImageView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d30"
                android:src="@mipmap/ic_share"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d30"
                android:src="@mipmap/ic_collect_off"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</layout>