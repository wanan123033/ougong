<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d10"
            android:paddingTop="@dimen/d10">

            <CheckBox
                android:id="@+id/cb_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_red"
                android:button="@null"
                android:checked="true"
                android:paddingBottom="@dimen/d3"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:paddingTop="@dimen/d3"
                android:text="最火"
                android:textColor="@color/color_red_black"
                app:layout_marginLeftPercent="5%w"
                app:layout_textSizePercent="2%w" />

            <CheckBox
                android:id="@+id/cb_newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_red"
                android:button="@null"
                android:checked="false"
                android:paddingBottom="@dimen/d3"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:paddingTop="@dimen/d3"
                android:text="最新"
                android:textColor="@color/color_red_black"
                app:layout_marginLeftPercent="3%w"
                app:layout_textSizePercent="2%w" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:paddingBottom="@dimen/d3"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d3"
                android:paddingTop="@dimen/d3"
                android:text="@string/str_jg"
                android:textColor="@color/color_787878"
                app:layout_marginLeftPercent="3%w"
                app:layout_textSizePercent="2%w" />

            <ImageView
                android:id="@+id/iv_price"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_price_defualt"
                app:layout_heightPercent="2.5%w"
                app:layout_widthPercent="2.5%w" />

            <EditText
                android:id="@+id/et_min_price"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_grap"
                android:gravity="center"
                android:hint="最小价"
                android:imeOptions="actionSearch"
                android:inputType="number"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                app:layout_heightPercent="4%w"
                app:layout_textSizePercent="2%w"
                app:layout_widthPercent="10%w" />

            <EditText
                android:id="@+id/et_max_price"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_grap"
                android:gravity="center"
                android:hint="最高价"
                android:imeOptions="actionSearch"
                android:inputType="number"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                app:layout_heightPercent="4%w"
                app:layout_textSizePercent="2%w"
                app:layout_widthPercent="10%w" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_select_brand"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_E70052"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/white"
                app:layout_heightPercent="5%w"
                app:layout_marginRightPercent="5%w"
                app:layout_textSizePercent="2%w"
                app:layout_widthPercent="10%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f0f0f0" />
    </LinearLayout>
</layout>