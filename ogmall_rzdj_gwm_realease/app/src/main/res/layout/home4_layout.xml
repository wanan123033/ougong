<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:layout_heightPercent="2%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_marginRightPercent="3%w">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/color_333333"
                app:layout_marginRightPercent="50%h"
                app:layout_widthPercent="18%h" />

            <TextView
                android:id="@+id/tv_ptsps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_qjalty"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="90%h" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d15"
                android:drawableRight="@mipmap/ic_arrows_right"
                android:text="@string/str_gd"
                android:textColor="@color/color_333333"
                app:layout_textSizePercent="80%h" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="31%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_marginRightPercent="3%w"
            app:layout_marginTopPercent="2%w">

            <ImageView
                android:id="@+id/iv_design"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d24"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_design"
                app:layout_widthPercent="48%w" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_plan1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/d14"
                android:layout_toRightOf="@+id/iv_design"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_design"
                app:layout_heightPercent="47%h"
                app:layout_widthPercent="22.5%w" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_plan2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/iv_plan1"
                android:layout_toRightOf="@+id/iv_design"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_design"
                app:layout_heightPercent="47%h"
                app:layout_widthPercent="22.5%w" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_plan3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_plan1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_design"
                app:layout_widthPercent="22.5%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</layout>